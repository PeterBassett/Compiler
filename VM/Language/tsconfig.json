{
  "compileOnSave": true,
  "compilerOptions": {
    "noImplicitAny": true,
    "noEmitOnError": true,
    "removeComments": true,
    "noImplicitReturns": true,
    "strict": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "sourceMap": true,
    "target": "ES6",
    "module": "amd",
    "outDir": "../js/compiler",
    "moduleResolution": "node",
    "incremental": false,
    "lib": ["ES6"]
  },
  "include": [
      "./**/*.ts" //, "../misc/StringWriter.ts", "../misc/TextWriter.ts"
  ],
  "exclude": [
    "node_modules",
    "../node_modules",
    "../node_modules/*",
    "../node_modules/**"
  ] 
}